@page "/compras"


<style>

    .asd {
        border: none;
        color: black;
        padding: 16px 32px;
        margin: 2px 1px;
        transition-duration: 0.4s;
    }

        .asd:hover {
            box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);
        }

    .card:hover {
        box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);
    }

</style>


<div class="container">
    <div class="row">

        
        <div class=" col-xl-3 col-md-6 mb-4">
            <div class="card border-10 ">
                <div @onclick=gotoproveedores>
                    <img src="/Images/proveedores.png" class="card-img-top" alt="...">
                    <div class="card-body text-center">
                        <h4 class="card-title mb-0">Proveedores</h4>
                        <label>Descripción proveedores (*)</label>
                    </div>
                </div>
            </div>
        </div>
        
        <div class=" col-xl-3 col-md-6 mb-4">
            <div class="card border-10 ">
                <div @onclick=gotobienes>
                    <img src="/Images/adquisicion.png" class="card-img-top" alt="...">
                    <div class="card-body text-center">
                        <h4 class="card-title mb-0">Ingreso de bienes</h4>
                        <label>Descripción ingreso de bienes (*)</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@code {
    async Task gotobienes()
    {
        nav.NavigateTo("/bienes");
    }
    
    
    async Task gotoproveedores()
    {
        nav.NavigateTo("/proveedores");

    }
}
